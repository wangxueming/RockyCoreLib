<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_ll_win_top_bar_container"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:minHeight="45dp">

    <TextView
        android:id="@+id/cv_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:minWidth="44dp"
        android:layout_alignBaseline="@+id/cv_tv_title"
        android:layout_alignBottom="@+id/cv_tv_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:drawableStart="@drawable/selector_nav_back_gray"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:textColor="@color/gray_34333C"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cv_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:textColor="@color/red_FF4E40"
        android:textSize="15dp"
        tools:drawableEnd="@drawable/selector_menu_more" />

    <TextView
        android:id="@+id/cv_tv_title"
        style="@style/SingleLineText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingEnd="55dp"
        android:paddingStart="55dp"
        android:textColor="@color/gray_34333C"
        android:textSize="17dp" />

    <View
        android:id="@+id/cv_view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_gray_window_background" />

</RelativeLayout>