<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/base_CommonPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_frag_tab_list"
    android:orientation="vertical">

    <com.rockyw.customview.widget.WinTopBar
        android:id="@+id/core_top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:bar_showDivider="true"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/core_tl_tabs"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        app:tabTextAppearance="@style/base_TabLayoutTextStyle"
        android:background="@color/white"
        app:tabBackground="@drawable/base_bg_tab_layout"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/base_colorPrimary"
        app:tabTextColor="@color/color_66"/>

    <!--可滑动的布局内容-->
    <android.support.v4.view.ViewPager
        android:id="@+id/core_vp_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>