<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.rockyw.customview.widget.WinTopBar
        android:id="@+id/core_top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:bar_titleText="合格投资者认定" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="44dp"
        android:layout_marginTop="44dp"
        android:text="合格投资者认定（试行）说明"
        android:textColor="@color/base_black_282828"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="自然人合格投资者指具备相应风险识别、承受能力且符合以下条件的会员。\n\n"
        android:textColor="@color/base_black_282828"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/core_tv_qualify_investor_summary1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:lineSpacingMultiplier="1.5"
        android:text="一、投资者或其家庭名下金融资产"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/core_tv_qualify_investor_summary2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:lineSpacingMultiplier="1.5"
        android:text="一、投资者或其家庭名下金融资产"
        android:textSize="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="您点击确定，即代表您承诺已符合合格投资者认定（试行）标准。"
        android:textColor="@color/base_black_282828"
        android:textSize="13dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp">

        <CheckBox
            android:id="@+id/core_cb_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/core_selector_qualify_investor_checkbox"
            android:checked="false"
            android:gravity="center"
            android:paddingEnd="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:lineSpacingMultiplier="1.2"
            android:text="我已认真阅读《合格投资者认定（试行）说明》，且符合相关要求。"
            android:textColor="@color/base_gray_999999"
            android:textSize="13dp" />
    </LinearLayout>

    <Button
        android:id="@+id/core_btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/base_selector_ic_login_bg"
        android:gravity="center"
        android:text="继续浏览产品"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:enabled="false" />
</LinearLayout>